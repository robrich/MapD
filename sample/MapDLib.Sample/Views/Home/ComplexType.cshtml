@model List<SomeListClass1ViewModel>

@{
	ViewBag.Title = "Edit a list of items";
}

<h2>@ViewBag.Title</h2>

@using ( Html.BeginForm() ) {
	<div>
		@Html.ValidationSummary(true)
	
		@for ( int i = 0; i < Model.Count; i++ ) {
			<div>
				@Html.LabelFor( m => m[i].SomeId )
				@Html.EditorFor( m => m[i].SomeId )
				<br />
				@Html.LabelFor( m => m[i].TheName )
				@Html.EditorFor( m => m[i].TheName )
				<br />
				@Html.LabelFor( m => m[i].OriginDate )
				@Html.EditorFor( m => m[i].OriginDate )
				<br />
				@Html.LabelFor( m => m[i].SomeIrrelevantValue )
				@Html.EditorFor( m => m[i].SomeIrrelevantValue )
			</div>
		 }

		<div>
			<input type="submit" value="Save" />
		</div>
	</div>
}